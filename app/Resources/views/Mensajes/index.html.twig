{% extends 'layout.html.twig' %}

{% block content %}
<div class="container mt-2">
    <div class="col-lg-10 box-default no-padding-lados">
        <h1 class="box-header">
            Mensajes
        </h1>

        <div class="col-lg-6">
            <h4>
                Enviar mensaje
            </h4>
            <hr>
            {{ form_start(formulario) }}
            {{ form_widget(formulario) }}
            <div class="form-group">

                <div class="col-sm-12">
                    <button type="submit" name="enviar" class="btn btn-success pull-right">
                        <i class="fa fa-send"></i>
                        Enviar
                    </button>
                    <a href="{{ path('mensajes_enviados') }}" class="btn btn-warning">
                        Mensajes enviados
                    </a>
                </div>
            </div>
            {{ form_end(formulario) }}
        </div>
        <div class="col-lg-6">
            <h4>
                Mensajes recibidos
            </h4>
            <hr>
            <div class="box-content box-mensajes">
                {% if mensajes|length > 0 %}
                    {% for mensaje in mensajes %}
                        <div class="col-lg-12 publication-item">
                            <p>
                                <a class="pub-name-link" href="{{ path('perfil_usuario', {'nick':  mensaje.emisor.nick}) }}">
                                    {{ mensaje.emisor.nombre }} {{ mensaje.emisor.apellidos }}
                                </a>
                                -
                                ({{ mensaje.emisor.nick }})
                                -
                                <span class="pub-date">
                                ({{ mensaje.fechaEnviado|date|localizeddate('short','none','es') }})
                            </span>
                            </p>
                            <div class="avatar">
                                {% if mensaje.emisor.imagenPerfil == null %}
                                    <img src="{{ asset('assets/images/default-avatar.jpg') }}" alt="avatar" />
                                {% else %}
                                    <img src="{{ asset('uploads/users/'~mensaje.emisor.imagenPerfil) }}" alt="avatar" />
                                {% endif %}
                            </div>

                            <div class="publication-item-content">
                                <table width="100%">
                                    <tr>
                                        <td>
                                            <p>
                                                {{ mensaje.mensaje }}
                                            </p>
                                        </td>
                                    </tr>
                                </table>

                            </div>
                            <div class="clearfix"></div>
                            <hr>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="col-lg-12">
                        <h3 class="text-center">AÃºn no tienes mensajes en tu bandeja de entrada.</h3>
                    </div>
                {% endif %}

                <div class="navigation">
                    {{ knp_pagination_render(mensajes) }}
                </div>
            </div>
        </div>


        <div class="clearfix"></div>
    </div>
</div>
{% endblock %}

