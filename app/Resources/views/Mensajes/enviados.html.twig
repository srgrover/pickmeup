{% extends 'layout.html.twig' %}

{% block content %}

    <div class="col-lg-10 box-default no-padding-lados">
        <h1 class="box-header">
            Mensajes Enviados
        </h1>
        <div class="col-lg-1"></div>
        <div class="col-lg-5">
            <a href="{{ path('mensajes') }}" class="btn btn-warning">
                Mensajes recibidos
            </a>
        </div>
        <div class="col-lg-5">
            <h4>
                Mensajes enviados
            </h4>
            <hr>
            <div class="box-content box-mensajes">
                {% if mensajes|length > 0 %}
                    {% for mensaje in mensajes %}
                        <div class="col-lg-12 publication-item">
                            <p>
                                <a class="pub-name-link" href="{{ path('perfil_usuario', {'nick':  mensaje.emisor.nick}) }}">
                                    {{ mensaje.emisor.nombre }} {{ mensaje.emisor.apellidos }}
                                </a>
                                -
                                ({{ mensaje.emisor.nick }})
                                -
                                <span class="pub-date">
                                ({{ mensaje.fechaEnviado|date('d-m-Y') }})
                            </span>
                            </p>
                            <div class="avatar">
                                {% if mensaje.emisor.imagenPerfil == null %}
                                    <img src="{{ asset('assets/images/default-avatar.jpg') }}" alt="avatar" />
                                {% else %}
                                    <img src="{{ asset('uploads/users/'~mensaje.emisor.imagenPerfil) }}" alt="avatar" />
                                {% endif %}
                            </div>

                            <div class="publication-item-content">
                                <table width="100%">
                                    <tr>
                                        <td>
                                            <p>
                                                {{ mensaje.mensaje }}
                                            </p>
                                        </td>
                                    </tr>
                                </table>

                            </div>
                            <div class="clearfix"></div>
                            <hr>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="col-lg-12">
                        <h3>AÃºn no tienes mensajes privados enviados.</h3>
                        <a href="{{ path('mensajes') }}" class="btn btn-primary">
                            <i class="fa fa-user-send"></i>
                            Manda un mensaje
                        </a>
                    </div>
                {% endif %}

                <div class="navigation">
                    {{ knp_pagination_render(mensajes) }}
                </div>
            </div>
        </div>


        <div class="clearfix"></div>
    </div>
{% endblock %}

