{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="col-lg-4"></div>
        <div class="col-lg-4 box-default">
            {{ form_start(form) }}
            <div class="form-group">
                <div class="pull-right">
                    <a href="{{ path('login') }}" tabindex="3">
                        Volver al login
                    </a>
                </div>
                {{ form_widget(form) }}
            </div>
            <div class="form-group">
                <button type="submit" name="login" class="btn btn-success btn-block" tabindex="2">
                    Aceptar
                </button>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="col-lg-4"></div>
    </div>

{% endblock %}

