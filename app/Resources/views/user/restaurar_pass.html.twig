{% extends 'layout.html.twig' %}

{% block content %}
    <div class="col-lg-12 mt-2"></div>
    <div class="clearfix"></div>
    <div class="col-lg-3"></div>
    <div class="col-lg-6 box-default mt-5">
        <div class="pull-right">
            <a href="{{ path('login') }}" tabindex="3">
                <i class="fa fa-long-arrow-left"></i>
                Volver al login
            </a>
        </div>
        <div class="clearfix"></div>
        <hr>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="form-group">
            <button type="submit" name="login" class="btn btn-info btn-block" tabindex="2">
                <i class="fa fa-save"></i>
                Guardar
            </button>
        </div>
        {{ form_end(form) }}
    </div>
    <div class="col-lg-3"></div>
{% endblock %}

