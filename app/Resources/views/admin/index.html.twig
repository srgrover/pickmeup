                                <div class="pull-left">
                                    <a href="{{ path('user_edit') }}" class="btn btn-primary btn-flat">
                                        <i class="fa fa-edit"></i>
                                        Editar
                                    </a>
                                </div>
                                <div class="pull-right">
                                    <a href="{{ path('salir') }}" class="btn btn-primary btn-flat">
                                        <i class="fa fa-sign-out"></i>
                                        Salir
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
