                                    {% endfor %}
                                </ul>
                            </li>
                            <li class="footer"><a href="{{ path('all_notificaciones') }}">Ver todo</a></li>
                        </ul>
                    </li>
                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            {% if admin.imagenPerfil == null %}
                                <img src="{{ asset('assets/images/default-avatar.jpg') }}" width="" class="user-image" alt="avatar"/>
                            {% else %}
                                <img src="{{ asset('uploads/users/'~admin.imagenPerfil) }}" width="" class="user-image" alt="avatar"/>
                            {% endif %}
                            <span class="hidden-xs">{{ admin.nombre }} {{ admin.apellidos }}</span>
