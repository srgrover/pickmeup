                    <!-- Messages: style can be found in dropdown.less-->
                    <li class="dropdown messages-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-envelope-o"></i>
                            <span class="label label-success label-notifications-msg"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="header">Tienes <span class="label-notifications-msg"></span> mensajes sin leer</li>
                            <li>
                                <!-- inner menu: contains the actual data -->
                                <ul class="menu">
                                    {% for mensaje in mensajes_admin %}
                                    <li><!-- start message -->
                                        <a href="#">
                                            <div class="pull-left">
                                                {% if mensaje.emisor.imagenPerfil == null %}
                                                    <img src="{{ asset('assets/images/default-avatar.jpg') }}" class="img-circle"
                                                         alt="avatar"/>
                                                {% else %}
                                                    <img src="{{ asset('uploads/users/'~mensaje.emisor.imagenPerfil) }}" class="img-circle" alt="avatar"/>
                                                {% endif %}
                                            </div>
                                            <h4>
                                                {{ mensaje.emisor.nombre }} {{ mensaje.emisor.apellidos }}
                                                <small>
                                                    <i class="fa fa-clock-o"></i>
                                                    {{ mensaje.fechaEnviado|date|localizeddate('short','none','es') }}
                                                </small>
                                            </h4>
                                            <p>{{ mensaje.mensaje }}</p>
                                        </a>
                                    </li>
                                    <!-- end message -->
                                    {% endfor %}
                                </ul>
                            </li>
                            <li class="footer">
                                <a href="{{ path('mensajes') }}">
                                    Ver todos los mensajes
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- Notifications: style can be found in dropdown.less -->
                    <li class="dropdown notifications-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-bell-o"></i>
                            <span class="label label-warning label-notifications"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="header">Tienes <span class="label-notifications"></span> notificaciones</li>
                            <li>
                                <!-- inner menu: contains the actual data -->
                                <ul class="menu">
                                    {% for notif in notif_admin  %}
                                        {% set usuario_notif = notif.tipoId|get_user %}
                                        {% set usuario_seg = notif.idUsuario|get_user %}
                                        <li>
                                        {% if notif.tipo == 'follow' %}
                                            <a style="white-space: normal">
                                                <i class="fa fa-retweet text-primary"></i>
                                                {{ usuario_notif.nombre }} {{ usuario_notif.apellidos }} ahora sigue a
                                                {{ usuario_seg.nombre }} {{ usuario_seg.apellidos }}
                                            </a>
                                        {% endif %}
